<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.jinhui.progressbar.CustomTitleView
            android:id="@+id/customtitleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:titleText="2017"
            app:titleTextColor="#FF0000"
            app:titleTextSize="16sp" />

        <com.example.jinhui.progressbar.HorizontalProgressBarWithProgress
            android:id="@+id/progressBar_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="10dp"
            android:layout_marginTop="30dp"/>

        <com.example.jinhui.progressbar.HorizontalProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100"
            android:padding="15dp"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="@color/black"
            android:layout_marginTop="30dp"/>

        <com.example.jinhui.progressbar.HorizontalProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="15dp"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="@color/black"
            android:layout_marginTop="30dp"/>


        <com.example.jinhui.progressbar.CircleProgressBar
            android:id="@+id/progressBar_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            app:radius = "50dp"
            android:padding="15dp"
            app:progress_text_size="25sp"
            app:progress_text_color="#ff000000"
            app:progress_unreach_color="#44ff0000"
            android:layout_marginTop="30dp"/>

        <com.example.jinhui.progressbar.CircleProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="80"
            app:radius = "50dp"
            android:padding="15dp"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="@color/black"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</ScrollView>